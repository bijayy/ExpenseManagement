<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnCreateNewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="textPersonName"
            android:text="Create New Group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnUpdateExistingGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:inputType="textPersonName"
            android:text="Update Existing Group"
            app:layout_constraintEnd_toEndOf="@+id/btnCreateNewGroup"
            app:layout_constraintStart_toStartOf="@+id/btnCreateNewGroup"
            app:layout_constraintTop_toBottomOf="@+id/btnCreateNewGroup" />

        <Button
            android:id="@+id/btnAddExpenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:inputType="textPersonName"
            android:text="Add Expenses"
            app:layout_constraintEnd_toEndOf="@+id/btnUpdateExistingGroup"
            app:layout_constraintStart_toStartOf="@+id/btnUpdateExistingGroup"
            app:layout_constraintTop_toBottomOf="@+id/btnUpdateExistingGroup" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>